from flask import Flask, request, redirect, send_from_directory
import os
import subprocess

app = Flask(__name__)
UPLOAD_FOLDER = "uploaded_files"
os.makedirs(UPLOAD_FOLDER, exist_ok=True)

# Serve upload page
@app.route("/")
def index():
    return send_from_directory('.', "index.html")

# Handle file upload
@app.route("/upload", methods=["POST"])
def upload_file():
    file = request.files.get("file")
    if file and file.filename.endswith(".py"):
        filepath = os.path.join(UPLOAD_FOLDER, "app.py")
        file.save(filepath)

        # Kill previous running bot if needed
        subprocess.call("pkill -f app.py", shell=True)

        # Run new app.py in background
        subprocess.Popen(["python3", filepath])

        return f"File uploaded and running: {file.filename}"
    return "Invalid file"

if __name__ == "__main__":
    app.run(host="0.0.0.0", port=10000)
